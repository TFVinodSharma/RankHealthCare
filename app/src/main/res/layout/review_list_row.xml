<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="0.01dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <!--<ImageView-->
                <!--android:layout_width="120dp"-->
                <!--android:layout_height="140dp"-->
                <!--android:src="@drawable/ic_person_black"-->
                <!--android:layout_gravity="center"-->
                <!--android:scaleType="fitXY"/>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">

            <TextView
                android:text="Shankardass"
                android:textSize="@dimen/font_size"
                android:textColor="#3e3e3e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@+id/date"
                android:id="@+id/name" />

                <TextView
                    android:text="25-07-2017"
                    android:textSize="@dimen/font_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:id="@+id/date" />


             </RelativeLayout>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:id="@+id/rel_rate">

                <RatingBar
                    android:id="@+id/set_rating"
                    style="@style/foodRatingBar"
                    android:textSize="@dimen/font_size"
                    android:progressTint="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:numStars="5" />

                <TextView
                    android:text="(4.5)"
                    android:textSize="@dimen/font_size"
                    android:textColor="#000"
                    android:layout_toRightOf="@+id/set_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/ratetv" />

            </RelativeLayout>

            <TextView
                android:text="good"
                android:textSize="@dimen/font_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/title" />

            <TextView
                android:text="We offer full veg/non veg meals with low cost with tasty food, it takes easy processing of order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/desc" />




</LinearLayout>

            </LinearLayout>
    </android.support.v7.widget.CardView>





</LinearLayout>