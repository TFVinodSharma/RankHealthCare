<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:padding="5dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="2.5dp"
                android:background="@drawable/box">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="105dp"
                    android:layout_height="130dp"
                    android:scaleType="fitXY"

                    android:src="@drawable/ca"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">

                <TextView
                    android:text="Shankar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:background="@drawable/box"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:id="@+id/name"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/rel_rate">

                    <RatingBar
                        android:id="@+id/set_rating"
                        style="@style/foodRatingBar"
                        android:background="@drawable/box"
                        android:progressTint="#FFEB3B"
                        android:stepSize=".5"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:numStars="5" />

                    <TextView
                        android:text="(4.5)"
                        android:textSize="18dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/set_rating"
                        android:layout_centerVertical="true"
                        android:id="@+id/ratetv" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="2dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/doctor2"
                        android:layout_margin="2dp"/>

                    <TextView
                        android:text="5 years Experience "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:id="@+id/exp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="2dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/doctor"
                        android:layout_margin="2dp"/>

                    <TextView
                        android:text="abc street, chengam, tvmalai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:id="@+id/spl"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="2dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_location_black"
                        android:layout_margin="2dp"/>

                    <TextView
                        android:text="abc street, chengam, tvmalai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#b5000000"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:id="@+id/addr"/>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/bluebg">

            <View
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/v1"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Make Call"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:background="@drawable/shape"
                android:id="@+id/call"
                android:layout_toLeftOf="@+id/v1"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Details"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:background="@drawable/shape"
                android:id="@+id/enquery"
                android:layout_toRightOf="@+id/v1"/>

            <!--fccb43-->
            <!--02aeee-->

        </RelativeLayout>





    </LinearLayout>






</LinearLayout>